let arr = [10, 4, 200, 1, 3, 2];
let set = new Set(arr);
let longest = 0;

for (let num of set) {
  if (!set.has(num - 1)) {
    let current = num;
    let streak = 1;

    while (set.has(current + 1)) {
      current++;
      streak++;
    }
    longest = Math.max(longest, streak);
  }
}

console.log(longest);
